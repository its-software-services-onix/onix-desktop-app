<local:UserControlBase x:Class="Its.Onix.Ui.Client.Commons.Forms.UFormContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Its.Onix.Ui.Client.Commons.Forms"
             mc:Ignorable="d" 
             Width="{Binding FormWidth}"
             Height="{Binding FormHeight}"             
             d:DesignHeight="450" d:DesignWidth="800">

    <Border BorderBrush="Black" BorderThickness="2" CornerRadius="5" Background="Snow">
        <DockPanel LastChildFill="True">
            <Grid Height="30" DockPanel.Dock="Top" Margin="5" Background="WhiteSmoke">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Style="{StaticResource ResourceKey=FormCaptionLabel}" Content="{Binding Caption}"/>
                <Image Grid.Column="1" Margin="2" Width="25" Height="25" Source="pos_cancel_void.png"/>
            </Grid>

            <Grid x:Name="grdMain" DockPanel.Dock="Top" Margin="5" Background="WhiteSmoke">
            </Grid>
        </DockPanel>
    </Border>
</local:UserControlBase>
